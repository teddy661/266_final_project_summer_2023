    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            // we just need to make sure os.getcwd() is the root of the project
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "squadv2 evaluate Current File",
            "type": "python",
            "request": "launch",
            "program": "utils/evaluate-squadv2.py  ./data/squadv2/dev-v2.0.json  ${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        }
    ]
}